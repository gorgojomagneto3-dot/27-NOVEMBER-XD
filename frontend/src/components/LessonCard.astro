---
export interface Props {
  id: string;
  level: string;
  title: string;
  completed?: boolean;
}

const { id, level, title, completed = false } = Astro.props;

const levelColors: Record<string, string> = {
  'Básico': 'from-green-500 to-emerald-600',
  'Intermedio': 'from-blue-500 to-indigo-600',
  'Especial': 'from-purple-500 to-pink-600'
};

const gradient = levelColors[level] || 'from-gray-500 to-gray-600';
---

<a href={`/lesson/${id}`} 
   class:list={[
     "group relative block p-6 rounded-xl bg-gradient-to-br",
     gradient,
     "hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-2xl"
   ]}>
  {completed && (
    <span class="absolute top-2 right-2 text-2xl">✅</span>
  )}
  <div class="text-white">
    <span class="text-xs uppercase tracking-wider opacity-80">{level}</span>
    <h4 class="text-lg font-semibold mt-1 group-hover:text-white/90">{title}</h4>
  </div>
  <div class="absolute bottom-4 right-4 opacity-0 group-hover:opacity-100 transition-opacity">
    <span class="text-white text-2xl">→</span>
  </div>
</a>
